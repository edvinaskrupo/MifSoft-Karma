@model PostModel
<div id="registrationModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form asp-action="SignUp" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Organization</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-md-center">
                        <div class="col-md-6">
                            <section>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="OrgName"></label>
                                    <input asp-for="OrgName" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgName)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLongDescr"></label>
                                    <textarea class="form-control" asp-for="OrgLongDescr"></textarea>
                                    @Html.ValidationMessageFor(m => m.OrgLongDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgShortDescr"></label>
                                    <textarea class="form-control" asp-for="OrgShortDescr"></textarea>
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLogo"></label>
                                    <input type="file" class="form-control-file">
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgPhoto"></label>
                                    <input type="file" class="form-control-file">
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-login m-auto" style="width:200px"><span>Add Organization</span></button>
                </div>
            </div>
        </form>
    </div>
</div>

