@model PostModel
<div id="registrationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <form asp-action="SignUp" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Sign Up</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-md-center">
                        <img src="/Images/user-login.png" />
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-md-6">
                            <section>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="OrgName"></label>
                                    <input asp-for="OrgName" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgName)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLongDescr"></label>
                                    <input asp-for="OrgLongDescr" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgLongDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgShortDescr"></label>
                                    <input asp-for="OrgShortDescr" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLogo"></label>
                                    <input asp-for="OrgLogo" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgPhoto"></label>
                                    <input asp-for="OrgPhoto" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr)
                                </div>

                            </section>
                        </div>
                        <div class="col-md-12" style="text-align:center">
                            <button class="btn btn-link" id="loginButton" type="button">Already registered? Click here to login.</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-login m-auto"><span>Sign Up</span></button>
                </div>
            </div>
        </form>
    </div>
</div>

