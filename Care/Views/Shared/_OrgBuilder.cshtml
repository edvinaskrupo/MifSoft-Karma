@model NewPostModel
<div id="postModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <form asp-action="AddOrg" method="POST">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add New Organization</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-md-center">
                        <div class="col-md-6">
                            <section>
                                <div class="form-group">
                                    <label asp-for="OrgName">Organization Name</label>
                                    <input asp-for="OrgName" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgShortDescr">Quick Organization Description</label>
                                    <textarea class="form-control" asp-for="OrgShortDescr"></textarea>
                                    @Html.ValidationMessageFor(m => m.OrgShortDescr, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLongDescr">Longer Organization Description</label>
                                    <textarea class="form-control" asp-for="OrgLongDescr"></textarea>
                                    @Html.ValidationMessageFor(m => m.OrgLongDescr, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLink">Link to Organization's Website</label>
                                    <input asp-for="OrgLink" class="form-control" />
                                    @Html.ValidationMessageFor(m => m.OrgLink, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgLogo">Organization's Logo</label>
                                    <input class="form-control" asp-for="OrgLogo"/>
                                    @Html.ValidationMessageFor(m => m.OrgLogo, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label asp-for="OrgPhoto">Organization's Photo</label>
                                    <input class="form-control" asp-for="OrgPhoto">
                                    @Html.ValidationMessageFor(m => m.OrgPhoto, "", new { @class = "text-danger" })
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-login m-auto" style="width:200px"><span>Add Organization</span></button>
                </div>
            </div>
        </form>
    </div>
</div>

