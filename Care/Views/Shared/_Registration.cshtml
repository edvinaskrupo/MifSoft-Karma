@model UserRegistrationModel
<div class="form-card">
    <h2 class="fs-title">User registration</h2>
</div>
<form asp-controller="Auth" asp-action="SignUp" method="POST">
    <div class="form-card">
        <div class="form-group">
            <input type="text" asp-for="FullName" placeholder="Full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
            @Html.ValidationMessageFor(m => m.FullName)
        </div>
        <div class="form-group">
            <input type="email" asp-for="EmailAddress" placeholder="Email address" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
            @Html.ValidationMessageFor(m => m.EmailAddress)
        </div>
        <div class="form-group">
            <input type="password" asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <input type="button" class="previous action-button-previous" value="Previous" />
    <button type="submit" class="action-button"><span>Confirm</span></button>
</form>
