<div id="loginModal" class="modal show" role="dialog">
    <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Log In</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="login-as-user"> 
                        <input type="radio" id="LoginUser" name="login-as" value="user" checked>
                        <label for="LoginUser">Login as user</label>
                    </div>
                    <div class="login-as-admin"> 
                        <input type="radio" id="LoginAdmin" name="login-as" value="admin">
                        <label for="LoginAdmin">Login as admin</label>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="submit" class="btn btn-login m-auto" id="btn-login-next" onclick="chooseLogin()">Next</button>
                </div>
            </div>
    </div>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>